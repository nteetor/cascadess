{
  "name": "cascadess",
  "version": "0.1.0",
  "description": "A grammar of style.",
  "main": "dist/cascadess.css",
  "scripts": {
    "vendors": "run-s vendors-root vendors-bootstrap",
    "vendors-root": "[ -d 'vendors' ] || { echo '\\033[0;31mMissing vendors/ directory\\033[0m'; exit 1; }",
    "vendors-bootstrap": "[ -d 'vendors/bootstrap' ] || { echo '\\033[0;31mMissing vendors/bootstrap directory\\033[0m'; exit 1; }",
    "css": "run-s vendors css-compile css-prefix css-minify css-vend",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/ -o dist/",
    "css-minify": "cleancss --level 1 --format breakWith=lf --source-map --source-map-inline-sources --output dist/cascadess.min.css dist/cascadess.css",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "css-vend": "cp dist/* ../inst/www/cascadess/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nteetor/cascadess.git"
  },
  "author": "Nathan Teetor",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/nteetor/cascadess/issues"
  },
  "homepage": "https://github.com/nteetor/cascadess#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-prefixer": "^2.1.2"
  }
}
